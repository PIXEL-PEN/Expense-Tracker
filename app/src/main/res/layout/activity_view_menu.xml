<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:gravity="center_horizontal">

    <!-- Top bar -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center_vertical|start"
        android:paddingStart="16dp"
        android:paddingTop="32dp"
        android:text="View Menu"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="#455A64" />

    <!-- Spacer above buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <!-- Buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewAll"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="View All"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDateWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="View by Date"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMonthWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="View by Month"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:layout_marginBottom="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCategoryWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="View by Category"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:textSize="19sp" />
    </LinearLayout>

    <!-- Spacer below buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
