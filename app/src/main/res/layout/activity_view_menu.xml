<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1">

    <!-- Top bar -->
    <include layout="@layout/top_bar" />

    <!-- Spacer to push buttons slightly above vertical center -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Buttons container -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingHorizontal="32dp"
        android:layout_marginBottom="48dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewAll"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="View All"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDateWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="Date Wise"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMonthWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="Month Wise"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="16dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCategoryWise"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@null"
            android:text="Category Wise"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Bottom spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
